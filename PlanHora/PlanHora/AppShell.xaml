<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PlanHora.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PlanHora.Views"
    Title="PlanHora">

    <!-- Página inicial: Login -->
    <ShellContent
        Title="Login"
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Página de selección de local -->
    <ShellContent
        Title="Seleccionar Local"
        Route="SelectLocalPage"
        ContentTemplate="{DataTemplate views:SelectLocalPage}" />

    <!-- Página de empleados -->
    <ShellContent 
        Title="Empleados" 
        Route="EmpleadosPage"
        ContentTemplate="{DataTemplate views:EmpleadosPage}" />

    <!-- Página de horarios -->
    <ShellContent 
        Title="Horarios" 
        Route="HorariosPage"
        ContentTemplate="{DataTemplate views:HorariosPage}" />

    <!-- Página de registro -->
    <ShellContent
        Title="Registro"
        Route="RegisterPage"
        ContentTemplate="{DataTemplate views:RegisterPage}" />
</Shell>
