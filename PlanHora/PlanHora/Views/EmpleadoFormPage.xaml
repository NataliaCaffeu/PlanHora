<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanHora.Views.EmpleadoFormPage"
             Title="Empleado">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Entry x:Name="NombreEntry" Placeholder="Nombre del empleado" />
            <Entry x:Name="PuestoEntry" Placeholder="Puesto o cargo" />
            <Entry x:Name="JornadaEntry" Placeholder="Jornada semanal (horas)" Keyboard="Numeric" />

            <Label Text="Seleccionar Local" FontAttributes="Bold" />
            <Picker x:Name="LocalPicker"
                    Title="Seleccionar Local"
                    ItemDisplayBinding="{Binding Nombre}" />

            <Button Text="Guardar" Clicked="OnSaveClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
